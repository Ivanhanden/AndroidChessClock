<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:orientation="vertical"
	android:stretchColumns="1" android:layout_gravity="center" android:id="@+id/LinearLayout2"
	android:layout_weight="0" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent">
	<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="0">
		<LinearLayout android:gravity="top" android:layout_width="match_parent"
			android:layout_height="match_parent" android:layout_weight="1"
			android:orientation="horizontal" style="@android:style/ButtonBar">
			<TextView android:id="@+id/clock1" android:layout_gravity="left|center"
				android:layout_width="wrap_content" style="@style/clockStyle"
				android:gravity="center" android:layout_weight="1"></TextView>
			<Button android:id="@+id/reset_button" android:text="@string/reset_button"
				android:gravity="center" android:layout_gravity="center|left"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:layout_width="wrap_content" style="@android:style/MediaButton"
				android:layout_weight="0.2"></Button>
			<ToggleButton android:gravity="center" android:id="@+id/pause_button"
				android:textOff="@string/pauseoff_button" android:layout_gravity="center|right"
				android:layout_height="wrap_content" style="@android:style/MediaButton"
				android:textOn="@string/pauseon_button" android:layout_width="wrap_content"
				android:textStyle="bold" android:layout_weight="0.2"></ToggleButton>
			<TextView android:id="@+id/clock2" android:layout_gravity="right|center"
				android:layout_width="wrap_content" style="@style/clockStyle"
				android:gravity="center" android:layout_weight="1"></TextView>
		</LinearLayout>
	</TableRow>
	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/ll1"
		android:animateLayoutChanges="true">
		<FrameLayout android:id="@+id/frameLayoutWhite"
			android:layout_height="match_parent" android:layout_gravity="left"
			android:layout_width="wrap_content" android:layout_weight="1">
			<ImageButton android:layout_width="match_parent"
				android:scaleType="fitXY" android:src="@drawable/white"
				android:layout_height="match_parent" android:background="@null"
				android:id="@+id/button1" ></ImageButton>
			<TextView android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content" android:id="@+id/moveCounter1"
				android:layout_height="wrap_content" android:gravity="bottom"
				android:layout_gravity="bottom|center" android:text="0"
				android:visibility="gone"></TextView>
		</FrameLayout>
		<FrameLayout android:id="@+id/frameLayoutBlack"
			android:layout_height="match_parent" android:layout_gravity="right"
			android:layout_width="wrap_content" android:layout_weight="1">
			<ImageButton android:layout_width="match_parent"
				android:scaleType="fitXY" android:src="@drawable/black"
				android:layout_height="match_parent" android:background="@null"
				android:id="@+id/button2" ></ImageButton>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_gravity="bottom|center" android:id="@+id/moveCounter2"
				android:gravity="bottom" android:text="0" android:visibility="gone"></TextView>
		</FrameLayout>
	</LinearLayout>
</TableLayout>



