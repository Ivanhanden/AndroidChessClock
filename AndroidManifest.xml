<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="2" android:versionName="1.1"
	package="johnwilde.androidchessclock">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="12" />
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>

	<application android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
		<activity android:name="ChessTimerActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="TimerOptions"></activity>

	</application>
</manifest>